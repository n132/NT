gef = """
"""

import sys
print(os.getlogin())

switch = sys.argv[1]
if switch == "peda":
    content = peda
elif switch == "pwndbg":
    content = pwndbg
elif switch == "n132" or switch == "pwnkit":
    content = pwnkit
else:
    print(f"[-] Invalid plugin: {switch}")
    exit(1)
print(f"[+] Deploying {switch}...")
with open("/home/n132/.gdbinit",'w') as f:
    f.write(content)
print(f"[+] Deployed {switch}.")
